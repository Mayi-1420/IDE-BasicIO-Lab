#include <iostream>
using namespace std;

int main (){

string fullname;
int age;
int currentYear = 2025;
int yearTurn60 = currentYear + (40 - age);


cout << "Enter your fullname: ";
getline (cin,fullname);

cout << "Enter your age: ";
cin >> age;

cout << "Hello " << fullname << ", you are " << age << " years old!" << endl;

cout << "You will turn 60 years old in this year " << yearTurn60 << endl;
return 0;

}
